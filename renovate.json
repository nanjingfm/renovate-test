{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "baseBranches": ["main", "/^release\\/.*/"],
  "postUpdateOptions": ["gomodTidy"],
  "packageRules": [
    {
      "enabled": false,
      "matchPackageNames": [
        "*"
      ]
    }
  ],
  "osvVulnerabilityAlerts": true,
  "vulnerabilityAlerts": {
    "vulnerabilityFixStrategy": "lowest",
    "labels": ["security"],
    "automerge": true,
    "assignees": ["@someone"],
    "enabled": true
  }
}